<% if flash[:notice] %>
	<div class="alert alert-danger">
		<%= flash[:notice] %>
	</div>
 <% end %>
 
<div class="container form-container">
	<div class="main-form">
		<%= form_tag fetch_directors_path, multipart: true, :class => 'form-inline'  do %>
		  <div class="form-group">
		    <label for="username">Letterboxd Username:</label>
		    <%= text_field_tag :username, nil, :required => true, :class => 'm-1' %>
		  	<input class="big-btn btn btn-lg btn-primary m-3" type="submit" value="Get Directors" role="button">
		  </div>
		<% end %>
	</div>
</div>
